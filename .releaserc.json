{
  "branches": ["main"],
  "repositoryUrl": "https://github.com/your-username/name-shuffle-app.git",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          {
            "type": "feat",
            "release": "minor"
          },
          {
            "type": "fix",
            "release": "patch"
          },
          {
            "type": "docs",
            "release": "patch"
          },
          {
            "type": "style",
            "release": "patch"
          },
          {
            "type": "refactor",
            "release": "patch"
          },
          {
            "type": "perf",
            "release": "patch"
          },
          {
            "type": "test",
            "release": "patch"
          },
          {
            "type": "build",
            "release": "patch"
          },
          {
            "type": "ci",
            "release": "patch"
          },
          {
            "type": "chore",
            "release": "patch"
          },
          {
            "type": "revert",
            "release": "patch"
          },
          {
            "breaking": true,
            "release": "major"
          }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {
              "type": "feat",
              "section": "âœ¨ Features"
            },
            {
              "type": "fix",
              "section": "ðŸ› Bug Fixes"
            },
            {
              "type": "docs",
              "section": "ðŸ“š Documentation"
            },
            {
              "type": "style",
              "section": "ðŸ’Ž Styles"
            },
            {
              "type": "refactor",
              "section": "ðŸ“¦ Code Refactoring"
            },
            {
              "type": "perf",
              "section": "ðŸš€ Performance Improvements"
            },
            {
              "type": "test",
              "section": "ðŸš¨ Tests"
            },
            {
              "type": "build",
              "section": "ðŸ›  Build System"
            },
            {
              "type": "ci",
              "section": "âš™ï¸ Continuous Integration"
            },
            {
              "type": "chore",
              "section": "â™»ï¸ Chores"
            },
            {
              "type": "revert",
              "section": "ðŸ—‘ Reverts"
            }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Changelog\n\nAll notable changes to this project will be documented in this file. See [Conventional Commits](https://conventionalcommits.org) for commit guidelines."
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": "ðŸŽ‰ This ${issue.pull_request ? 'PR is included' : 'issue has been resolved'} in version ${nextRelease.version} :tada:",
        "failTitle": "âŒ The automated release is failing ðŸš¨",
        "failComment": "The release from branch `${branch.name}` had failed due to the following errors:\n- ${errors.map(err => err.message).join('\\n- ')}",
        "labels": false,
        "releasedLabels": false
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "package.json",
          "package-lock.json",
          "docs/docker.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}